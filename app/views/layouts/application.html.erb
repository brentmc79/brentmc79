    <div class="hero-unit">
      <div class="row">
        <div class="span7 offset1">
          <a id="slider" href="<%= root_path %>" class="headshot">
            <%= image_tag("biopics/photo-1.png", :class => 'active') %>
            <%= image_tag("biopics/photo-2.png") %>
            <%= image_tag("biopics/photo-3.png") %>
            <%= image_tag("biopics/photo-4.png") %>
            <%= image_tag("biopics/photo-5.png") %>
            <%= image_tag("biopics/photo-6.png") %>
          </a>
          <% link_to image_tag("biopics/photo-1.png", :style => "display:inline-block"), root_path, :class => "headshot" %>
          <h1 class="hidden-phone"><%= link_to "@brentmc79", root_path %></h1>
          <h1 class="visible-phone"><%= link_to "@brentmc79", root_path %></h1>
          <p>Full-time web developer. Part-time smart ass.</p>
        </div>
      </div>
    </div>

    <div class="container">
      <div class="content">
        <div class="row">
          <div class="visible-phone">
            <%= render :partial => "searches/form" %>
            <div class="alert alert-info alert-block">
              <!--<p>I'm <span class="label label-info">Brent Collier</span>.</p>-->
              <p>I'm <strong>Brent Collier</strong>.</p>
              <p>I work on the <a href="http://twitter.com/safety">Trust & Safety</a> team at <a href="http://twitter.com">Twitter</a>, building internal tools with Ruby, Scala, and a smattering of other tech.</p>
            </div>
          </div>
          <div class="span7 offset1">
            <%= yield %>
          </div>
          <div class="hidden-phone span3">
            <div class="well sidebar-nav">
              <%= render :partial => "searches/form" %>
              <div class="alert alert-info alert-block">
                <!--<p>I'm <span class="label label-info">Brent Collier</span>.</p>-->
                <p>I'm <strong>Brent Collier</strong>.</p>
                <p>I work on the <a href="http://twitter.com/safety">Trust & Safety</a> team at <a href="http://twitter.com">Twitter</a>, building internal tools with Ruby, Scala, and a smattering of other tech.</p>
              </div>
              <h4>Other Posts</h4>
              <ul id="previous-posts" class="nav nav-list long">
                <% other_posts.each do |post| %>
                  <li><%= link_to post.title, post %></li>
                <% end %>
              </ul>
              <h4>Categories</h4>
              <ul class="nav nav-list long">
                <% tag_links.each do |tag_link| %>
                  <li><%= link_to "#{tag_link[:tag].name} (#{tag_link[:count]})", posts_path(:tag => tag_link[:tag].name) %></li>
                <% end %>
              </ul>
              <div style="float:none;clear:both"></div>
            </div><!--/.well -->
            <div class="well">
              <a href="http://stackoverflow.com/users/176021/brentmc79">
