<table class="table table-striped tablebordered">
  <tr>
    <th width="75%">Title</th>
    <th width="15%">Date</th>
    <th width="10%"></th>
  </tr>
  <% @posts.each do |post| %>
    <tr>
      <td><%= link_to post.title, post %></td>
      <td><%= post.created_at.strftime("%m/%d/%Y") %></tc>
      <td>
        <%= link_to "<i class=\"icon-edit\"></i>".html_safe, edit_admin_post_path(post), :class => "btn-mini btn", :title => "Edit this post" %>
        <%= link_to "<i class=\"icon-trash\"></i>".html_safe, admin_post_path(post), :method => :delete, :class => "btn-mini btn btn-delete", :title => "Delete this post", :confirm => "Delete for realz?" %>
      </td>
    </tr>
  <% end %>
</table>
